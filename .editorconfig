# http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.go]
indent_style = tab

[*.{js,jsx,json,html}]
indent_style = space
indent_size = 4

[webapp/{package*,.eslintrc}.json]
indent_size = 2

[plugin.json]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*.scss]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
